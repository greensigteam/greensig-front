# ========================================
# GREENSIG BACKEND - ENVIRONMENT VARIABLES
# ========================================

# ----------------
# Django Settings
# ----------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,api.greensig.local

# ----------------
# Database (PostgreSQL)
# ----------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=greensig
DB_USER=greensig_user
DB_PASSWORD=greensig_password_change_me
DB_HOST=localhost
DB_PORT=5432

# ----------------
# Redis (Cache & Celery)
# ----------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ----------------
# JWT Authentication
# ----------------
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=10080  # minutes (7 days)

# ----------------
# CORS Settings
# ----------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ----------------
# Email Configuration
# ----------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=greensig7@gmail.com
EMAIL_HOST_PASSWORD=your_email_password_here
DEFAULT_FROM_EMAIL=GreenSIG <greensig7@gmail.com>

# ----------------
# File Upload Settings
# ----------------
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,xls,xlsx
MEDIA_ROOT=media/
MEDIA_URL=/media/

# ----------------
# API Settings
# ----------------
API_VERSION=v1
API_TITLE=GreenSIG API
API_DESCRIPTION=API pour la gestion des espaces verts
PAGINATION_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ----------------
# Security
# ----------------
SECURE_SSL_REDIRECT=False  # Set to True in production with HTTPS
SESSION_COOKIE_SECURE=False  # Set to True in production
CSRF_COOKIE_SECURE=False  # Set to True in production
SECURE_HSTS_SECONDS=0  # Set to 31536000 in production
SECURE_HSTS_INCLUDE_SUBDOMAINS=False  # Set to True in production
SECURE_HSTS_PRELOAD=False  # Set to True in production

# ----------------
# Logging
# ----------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/greensig.log

# ----------------
# Celery Tasks
# ----------------
CELERY_TASK_ALWAYS_EAGER=False  # Set to True for synchronous execution in dev
CELERY_TASK_EAGER_PROPAGATES=True

# ----------------
# Notifications
# ----------------
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
# SMS_PROVIDER_API_KEY=your_sms_provider_key

# ----------------
# Reporting
# ----------------
REPORTS_STORAGE_PATH=reports/
REPORTS_RETENTION_DAYS=90

# ----------------
# Development Tools
# ----------------
DJANGO_DEBUG_TOOLBAR=False  # Set to True to enable debug toolbar in dev
SILK_PROFILING=False  # Set to True to enable Silk profiling

# ----------------
# Backup
# ----------------
BACKUP_ENABLED=True
BACKUP_STORAGE_PATH=backups/
BACKUP_RETENTION_DAYS=30

# ----------------
# Timezone & Localization
# ----------------
TIME_ZONE=Africa/Casablanca
LANGUAGE_CODE=fr-fr
USE_I18N=True
USE_L10N=True
USE_TZ=True

# ----------------
# Frontend URL (for emails, etc.)
# ----------------
FRONTEND_URL=http://localhost:5173

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ----------------
# Maintenance Mode
# ----------------
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=Le système est en maintenance. Veuillez réessayer plus tard.
